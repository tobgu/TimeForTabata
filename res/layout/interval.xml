<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/interval_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView android:id="@+id/time_left_text"
              android:gravity="center"
              android:textSize="200sp"
              android:singleLine="true"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="3" />
              
    <LinearLayout android:id="@+id/interval_stat_layout"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">
              
    	<LinearLayout android:id="@+id/intervals_left_layout"
        	          xmlns:android="http://schemas.android.com/apk/res/android"
             	 	  android:orientation="vertical"
              		  android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center_horizontal">

		    <TextView android:id="@+id/intervals_left_text"
        		      android:text="Intervals"
               		  android:gravity="left"
              		  android:textSize="20sp"
              		  android:paddingLeft="10sp"
              		  android:layout_weight="1"
              		  android:layout_width="fill_parent"
              		  android:layout_height="wrap_content" />

		    <TextView android:id="@+id/intervals_left"
              		  android:gravity="center_horizontal"
              		  android:textSize="80sp"
              		  android:singleLine="true"
              		  android:layout_weight="1"
              		  android:layout_width="fill_parent"
              		  android:layout_height="wrap_content" />
	    
	    </LinearLayout>
                     
       <LinearLayout android:id="@+id/sets_left_layout"
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     android:orientation="vertical"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:gravity="center_horizontal">

		    <TextView android:id="@+id/sets_left_text"
        		      android:text="Sets"
               		  android:gravity="left"
              		  android:textSize="20sp"
              		  android:layout_weight="1"
	                  android:paddingLeft="10sp"
              		  android:layout_width="fill_parent"
              		  android:layout_height="wrap_content" />

		    <TextView android:id="@+id/sets_left"
              		  android:gravity="center_horizontal"
              		  android:textSize="80sp"
		              android:singleLine="true"
              		  android:layout_weight="1"
              		  android:layout_width="fill_parent"
              		  android:layout_height="wrap_content" />
       
       </LinearLayout>          
              
    </LinearLayout>
	
	<Button android:id="@+id/tabata_stop" 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="Stop"
		    android:layout_weight="1" />

</LinearLayout>